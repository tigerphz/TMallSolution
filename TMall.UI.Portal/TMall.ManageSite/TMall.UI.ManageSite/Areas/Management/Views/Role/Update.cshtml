@model TMall.ManageSite.ViewModel.RoleVM
<div class="pageContent">
    @using (@Html.BeginForm("Update", "Role", method: FormMethod.Post, htmlAttributes: new { @class = "pageForm required-validate", @onsubmit = "return validateCallback(this, dialogAjaxDone);" }))
    {
        @Html.Hidden("navId")
        @Html.HiddenFor(x => x.SysNo)
        <div class="pageFormContent" layouth="52">
            <p>
                @Html.LabelFor(x => x.RoleName)
                @Html.TextBoxFor(x => x.RoleName, new { @size = 30, @class = "required" })
            </p>
            <p>
                @Html.LabelFor(x => x.Status)
                @Html.DropDownListFor(x => x.Status, ViewBag.StatusList as List<SelectListItem>)
            </p>
            <p>
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description, new { @size = 30, @cols = "30", @rows = "6" })
            </p>
        </div>
        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                保存</button></div>
                    </div>
                </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消</button></div>
                    </div>
                </li>
            </ul>
        </div>
    }
</div>
