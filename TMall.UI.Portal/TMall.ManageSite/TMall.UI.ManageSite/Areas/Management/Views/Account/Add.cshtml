@model TMall.ManageSite.ViewModel.SysUserVM
<div class="pageContent">
    @using (@Html.BeginForm("Add", "Account", method: FormMethod.Post, htmlAttributes: new { @class = "pageForm required-validate", @onsubmit = "return validateCallback(this, navTabAjaxDone);" }))
    {
        @Html.Hidden("navId")
        <div class="pageFormContent" layouth="52">
            <p>
                @Html.LabelFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new
                                                                                       {
                                                                                           @size = 30,
                                                                                           @class = "required",
                                                                                           @minlength = "3",
                                                                                           @maxlength = "20",
                                                                                           @remote = "/Management/Account/ValidatName"
                                                                                       })
            </p>
            <p>
                @Html.LabelFor(x => x.Password)
                @Html.PasswordFor(x => x.Password, new
                                                                                       {
                                                                                           @size = 30,
                                                                                           @class = "required alphanumeric",
                                                                                           @minlength = "6",
                                                                                           @maxlength = "20",
                                                                                           @id = "password"
                                                                                       })
            </p>
            <p>
                @Html.LabelFor(x => x.ConfirmPassword)
                @Html.PasswordFor(x => x.ConfirmPassword, new
                                                                                       {
                                                                                           @size = 30,
                                                                                           @class = "required",
                                                                                           @minlength = "6",
                                                                                           @maxlength = "20",
                                                                                           @equalto = "#password"
                                                                                       })
            </p>
            <p>
                @Html.LabelFor(x => x.NickName)
                @Html.TextBoxFor(x => x.NickName, new { @size = 30 })
            </p>
            <p>
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @size = 30, @class = "email" })
            </p>
            <p>
                @Html.LabelFor(x => x.Phone)
                @Html.TextBoxFor(x => x.Phone, new { @size = 30, @class = "phone" })
            </p>
            <p>
                @Html.LabelFor(x => x.QQ)
                @Html.TextBoxFor(x => x.QQ, new { @size = 30 })
            </p>
            <p>
                @Html.LabelFor(x => x.Address)
                @Html.TextAreaFor(x => x.Address, new { @size = 30, @cols = "30", @rows = "6" })
            </p>
            <p>
                @Html.LabelFor(x => x.Gender)
                @Html.DropDownList("Gender", new List<SelectListItem>() { 
                             new SelectListItem(){ Selected=true, Text="男", Value="1"},
                            new SelectListItem(){  Text="女", Value="0"},
                    })
            </p>
        </div>
        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                保存</button></div>
                    </div>
                </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消</button></div>
                    </div>
                </li>
            </ul>
        </div>
    }
</div>
